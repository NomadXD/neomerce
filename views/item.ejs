<html lang="en">
<%- include('common/head') %>

<body>
    <%- include('common/navbar',{'loggedIn':loggedIn}) %>
    <%- include('common/banner', {title: 'Product Details', description: 'Product details of ' + name}) %>

    <%- include ('partial/item', {
        name: name,
        description: description,
        images: images ,
        brand: brand,
        weight: weight,
        related: related,
    }) %>

    <%- include('common/footer') %>
