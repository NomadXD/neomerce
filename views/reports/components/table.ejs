<div class="card">
    <div class="card-header"> <%= title %></div>
    <div class="card-body">
        <table class="table table-responsive-sm">
            <thead>
                <tr>
                    <%for (header of headers) {%>
                    <th><%=header%></th>
                    <%}-%>
                </tr>
            </thead>
            <tbody>
                <%for (row of data){%>
                <tr>
                    <%for (i of Array(columns).keys()) {%>
                    <%if (rawhtml[i]) {%>
                    <td><%-row[i]%></td>
                    <%} else {%>
                    <td><%=row[i]%></td>
                    <%} %>
                    <%}%>
                </tr>
                <%}-%>
            </tbody>
        </table>
    </div>
</div>