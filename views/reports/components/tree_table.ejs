<%#
Required format:

{
    title: 'Simple Table',
    id: 'table1', // Unique id for each table
    rows: 5,
    columns: 4,
    headers: ['Username', 'Date registered', 'Role', 'Status'],
    rawhtml: [false, false, false, true], // Whether each column is raw html(true) or plain text(false)
    numeric: [false, false, false, false],
    data: [
        ['Samppa Nori', '2012/01/01', 'Member', '<span class="badge badge-success">Active</span>'],
        ['Estavan Lykos', '2013/01/03', 'Staff', '<span class="badge badge-danger">Banned</span>'],
        ['Chetan Mohamed', '2014/01/12', 'Member', '<span class="badge badge-warning">Inactive</span>'],
        ['Derick Maximinus', '2012/11/31', 'Staff', '<span class="badge badge-success">Active</span>'],
        ['Friderik DÃ¡vid', '2009/04/11', 'Member', '<span class="badge badge-warning">Inactive</span>'],
    ],
    parents: [
        ['row1', null],  // Current row id, parent row id('null' if no parent)
        ['row2', 'row1'], 
        ['row3', 'row1'], 
        ['row4', 'row3'], 
        ['row5', null]
    ]
}
%>

<%
if (!locals.numeric) numeric = Array(columns).fill(false);
%>

<%
// Algorithm to reorganize tree nodes

ordered_parents = [];
ordered_data = [];

for(i of Array(rows).keys()){
    parents[i].push(i);
}

function preOrderHelper(root, level) {
    level += 1
    if (root !== null) {
        root.push(level);
        ordered_parents.push(root);
        root = root[0];
    }
    parents.filter((v) => v[1] === root).forEach((v) => preOrderHelper(v, level));
}

preOrderHelper(null, -1);

for (parent of ordered_parents) {
    ordered_data.push(data[parent[2]]);
}

parents = ordered_parents;
data = ordered_data;
%>

<div class="card">
    <div class="card-header bg-dark text-white"> <%= title %></div>
    <div class="card-body">
        <table id="<%= id %>" class="table table-responsive-sm">
            <thead class="thead-dark">
                <tr>
                    <%for (i of Array(columns).keys()) {%>
                    <%if(numeric[i]) {%>
                    <th class="text-right"><%=headers[i]%></th>
                    <%} else {%>
                    <th><%=headers[i]%></th>
                    <%} %>
                    <%}-%>
                </tr>
            </thead>
            <tbody>
                <%for (rowi of Array(rows).keys()){%>
                <%row = data[rowi]%>
                <%parent = parents[rowi]%>
                <tr data-id="<%= parent[0] %>" data-parent="<%= parent[1] %>" data-level="<%= parent[3] %>">
                    <%for (i of Array(columns).keys()) {%>

                    <%  if (i === 0) { %>
                    <% data_attrib = 'data-column=name' %>
                    <%}else{%>
                    <% data_attrib = '' %>
                    <%}%>

                    <%if (rawhtml[i]) {%>
                    <td <%= data_attrib %>><%-row[i]%></td>
                    <%} else if(numeric[i]) {%>
                    <td <%= data_attrib %> class="text-right"><%=row[i]%></td>
                    <%} else {%>
                    <td <%= data_attrib %>><%=row[i]%></td>
                    <%} %>

                    <%}%>
                </tr>
                <%}-%>
            </tbody>
        </table>
    </div>
</div>

<script>
    $(function () {
        let $table = $('#<%= id %>');
        let rows = $table.find('tr');

        rows.each(function (index, row) {
            let $row = $(row);
            let level = $row.data('level');
            if (isNaN(level)) {
                level = 0;
            }

            let id = $row.data('id');
            let $columnName = $row.find('td[data-column="name"]');
            let children = $table.find('tr[data-parent="' + id + '"]');
            $columnName.css('padding-left', 25 * level);

            if (children.length) {
                $row.addClass('font-weight-bold');
                $columnName.prepend('<a type="button" class="cil-chevron-bottom mr-1"></a>');
                let expander = $columnName.find('a');

                expander.on('click', function (e) {
                    var $target = $(e.target);
                    if ($target.hasClass('cil-chevron-bottom')) {
                        $target.removeClass('cil-chevron-bottom');
                        $target.addClass('cil-chevron-right');
                        $row.removeClass('font-weight-bold');

                        reverseHide($table, $row);
                    } else {
                        $target.removeClass('cil-chevron-right');
                        $target.addClass('cil-chevron-bottom');
                        $row.addClass('font-weight-bold');

                        children.show();
                    }
                });
            } else {
                $columnName.prepend('<i class="cil-object-group mr-1"></i>');
            }
        });

        // Reverse hide all elements
        reverseHide = function (table, element) {
            var
                $element = $(element),
                id = $element.data('id'),
                children = table.find('tr[data-parent="' + id + '"]');

            if (children.length) {
                children.each(function (i, e) {
                    reverseHide(table, e);
                });

                $element
                    .find('.cil-chevron-bottom')
                    .removeClass('cil-chevron-bottom')
                    .addClass('cil-chevron-right');

                children.hide();
            }
        };
    });

</script>